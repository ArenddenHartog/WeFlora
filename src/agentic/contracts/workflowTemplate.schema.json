{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://weflora.app/schemas/agentic/workflowTemplate.schema.json",
  "title": "WorkflowTemplate",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": { "$ref": "./common.schema.json#/$defs/SemVer" },
    "workflow_id": { "type": "string", "minLength": 1 },
    "spec_version": { "$ref": "./common.schema.json#/$defs/SemVer" },
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string", "minLength": 1 },
    "parameters_schema": { "type": "object" },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "step_id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "agent_id": { "$ref": "./common.schema.json#/$defs/AgentId" },
          "agent_version": { "$ref": "./common.schema.json#/$defs/SemVer" },
          "parameters": { "type": "object" },
          "input_mapping": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "from": { "type": "string" },
                "to": { "type": "string" },
                "mode": { "type": "string", "enum": ["copy", "merge", "append", "set_if_missing"] },
                "required": { "type": "boolean" },
                "default_value": { "type": ["string", "number", "boolean", "object", "array", "null"] }
              },
              "required": ["from", "to", "mode"]
            }
          },
          "output_mapping": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "from": { "type": "string" },
                "to": { "type": "string" },
                "mode": { "type": "string", "enum": ["copy", "merge", "append", "set_if_missing"] },
                "required": { "type": "boolean" },
                "default_value": { "type": ["string", "number", "boolean", "object", "array", "null"] }
              },
              "required": ["from", "to", "mode"]
            }
          },
          "optional": { "type": "boolean", "default": false },
          "on_insufficient_data": {
            "type": "string",
            "enum": ["skip", "continue_with_partial", "fail", "mark_review"],
            "default": "mark_review"
          }
        },
        "required": ["step_id", "title", "agent_id", "agent_version"]
      }
    }
  },
  "required": ["schema_version", "workflow_id", "spec_version", "name", "description", "steps"]
}
