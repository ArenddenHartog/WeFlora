{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FloraGPT suitability_scoring v0.1",
  "type": "object",
  "required": ["schemaVersion", "meta", "mode", "responseType", "data"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "const": "v0.1" },
    "meta": { "$ref": "commonEnvelope.v0_1.json#/properties/meta" },
    "mode": { "type": "string", "const": "suitability_scoring" },
    "responseType": {
      "type": "string",
      "enum": ["answer", "clarifying_questions", "error"]
    },
    "data": { "type": "object" },
    "tables": { "$ref": "commonEnvelope.v0_1.json#/properties/tables" }
  },
  "allOf": [
    {
      "if": { "properties": { "responseType": { "const": "clarifying_questions" } } },
      "then": {
        "properties": {
          "data": {
            "type": "object",
            "required": ["questions"],
            "additionalProperties": false,
            "properties": {
              "questions": { "type": "array", "items": { "type": "string" }, "minItems": 1, "maxItems": 3 }
            }
          }
        }
      }
    },
    {
      "if": { "properties": { "responseType": { "const": "answer" } } },
      "then": {
        "properties": {
          "data": {
            "type": "object",
            "required": ["results"],
            "additionalProperties": false,
            "properties": {
              "results": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["name", "score", "rationale"],
                  "additionalProperties": false,
                  "properties": {
                    "name": { "type": "string" },
                    "score": { "type": "number", "minimum": 0, "maximum": 100 },
                    "riskFlags": { "type": "array", "items": { "type": "string" } },
                    "rationale": { "type": "string" },
                    "citations": { "type": "array", "items": { "type": "string" } }
                  }
                }
              },
              "shortlist": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    }
  ]
}
