{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FloraGPT spec_writer v0.1",
  "type": "object",
  "required": ["schemaVersion", "mode", "responseType", "data"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "const": "v0.1" },
    "meta": { "$ref": "commonEnvelope.v0_1.json#/properties/meta" },
    "mode": { "type": "string", "const": "spec_writer" },
    "responseType": {
      "type": "string",
      "enum": ["answer", "clarifying_questions", "error"]
    },
    "data": { "type": "object" },
    "tables": { "$ref": "commonEnvelope.v0_1.json#/properties/tables" }
  },
  "allOf": [
    {
      "if": { "properties": { "responseType": { "const": "clarifying_questions" } } },
      "then": {
        "properties": {
          "data": {
            "type": "object",
            "required": ["questions"],
            "additionalProperties": false,
            "properties": {
              "questions": { "type": "array", "items": { "type": "string" }, "minItems": 1, "maxItems": 3 }
            }
          }
        }
      }
    },
    {
      "if": { "properties": { "responseType": { "const": "answer" } } },
      "then": {
        "properties": {
          "data": {
            "type": "object",
            "required": ["specTitle", "specFields"],
            "additionalProperties": false,
            "properties": {
              "specTitle": { "type": "string" },
              "specFields": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["label", "value"],
                  "additionalProperties": false,
                  "properties": {
                    "label": { "type": "string" },
                    "value": { "type": "string" }
                  }
                }
              },
              "assumptions": { "type": "array", "items": { "type": "string" } },
              "citations": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    }
  ]
}
