{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FloraGPT general_research v0.2",
  "type": "object",
  "required": ["schemaVersion", "meta", "mode", "responseType", "data"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "const": "v0.2" },
    "meta": { "$ref": "commonEnvelope.v0_2.json#/properties/meta" },
    "mode": { "type": "string", "const": "general_research" },
    "responseType": {
      "type": "string",
      "enum": ["answer", "clarifying_questions", "error"]
    },
    "data": { "type": "object" },
    "tables": { "$ref": "commonEnvelope.v0_2.json#/properties/tables" }
  },
  "oneOf": [
    {
      "properties": {
        "responseType": { "const": "clarifying_questions" },
        "data": {
          "type": "object",
          "required": ["questions"],
          "additionalProperties": false,
          "properties": {
            "questions": { "type": "array", "items": { "type": "string" }, "minItems": 1, "maxItems": 3 }
          }
        }
      }
    },
    {
      "properties": {
        "responseType": { "const": "answer" },
        "data": {
          "type": "object",
          "required": ["summary", "reasoning_summary", "follow_ups", "output_label"],
          "additionalProperties": false,
          "properties": {
            "output_label": { "type": "string" },
            "summary": { "type": "string" },
            "highlights": { "type": "array", "items": { "type": "string" } },
            "reasoning_summary": {
              "type": "object",
              "required": ["approach", "assumptions", "risks"],
              "additionalProperties": false,
              "properties": {
                "approach": { "type": "array", "items": { "type": "string" }, "minItems": 1, "maxItems": 3 },
                "assumptions": { "type": "array", "items": { "type": "string" } },
                "risks": { "type": "array", "items": { "type": "string" } }
              }
            },
            "follow_ups": { "type": "array", "items": { "type": "string" }, "minItems": 3, "maxItems": 3 }
          }
        }
      }
    }
  ]
}
